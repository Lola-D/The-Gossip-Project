
<div class="card">
  <div class="card-header display-4">Se connecter</div>
  <div class="card-body">
    <%= form_tag url_for(action: 'create'), method: "post" do %>

      <div class="form-group row">
        <%= label_tag :email, "Ton email", class: "col-md-4 control-label"%>
        <div  class="col-md-8"><%= text_field_tag 'email' ,"", class:"form-control" %></div>
      </div>

      <div class="form-group row">
        <%= label_tag :password, "Ton mot de passe", class: "col-md-4 control-label"%>
        <div  class="col-md-8"><%= password_field_tag 'pw' ,"", class:"form-control" %></div>
      </div>

      <div class="form-group row mt-3">
        <div class="col-md-8 col-md-offset-4">
          <div><%= submit_tag 'Se connecter', class:"btn btn-primary" %></div>
        </div>
      </div>

    <% end %>
  </div>
</div>


