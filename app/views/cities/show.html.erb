  <div class="jumbotron">
    <div class="container">
      <h1 class="display-3">Les gossips de <%= @city.name %></h1>
      <div class="btn btn-primary btn-lg active" role="button" aria-pressed="true" style="width:200px;"> <%= link_to "Revenir aux villes", cities_path %></div>
    </div>
  </div>

<% Gossip.all.each do |gossip| %>
  <% if gossip.user.city_id == @city.id %>
    <div class="card_column">

        <div class="card mb-4 box-shadow p-3">
          <div class="card-body">
          <h5 class="card-title"><%=gossip.title%></h5>
          <p class="card-text"><%=gossip.content%></p>
          <div class="card-link">Ecrit par <%= link_to gossip.user.first_name, users_path(gossip.user.id) %></div>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <div class="btn btn-info btn-sm mt-3 mb-3" role="button" aria-pressed="true" style="width:200px;"> <%= link_to "Voir plus", gossip_path(gossip.id) %></div>
            </div>
          </div>
          </div>
        </div>

    </div>
  <% end %>
<% end %> 

