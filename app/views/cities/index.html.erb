  <div class="jumbotron">
    <div class="container">
      <h1 class="display-3">Recherche par villes</h1>
    </div>
  </div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nom</th>
    </tr>
  </thead>
  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <th scope="row"><%= city.id %></th>
        <td><%= link_to city.name, city_path(city.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>