<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="card">
  <div class="card-header display-4">S'inscrire</div>
  <div class="card-body">
    <%= form_for @user, class:"form-horizontal" do |f| %>

      <div class="form-group row">
        <%= f.label :first_name, "Ton prÃ©nom", class: "col-md-4 control-label"%>
        <div  class="col-md-8"><%= f.text_field :first_name, class: "form-control" %></div>
      </div>

      <div class="form-group row">
        <%= f.label :last_name, "Ton nom", class: "col-md-4 control-label"%>
        <div  class="col-md-8"><%= f.text_field :last_name, class: "form-control" %></div>
      </div>

      <div class="form-group row">
        <%= f.label :email, "Ton email", class: "col-md-4 control-label"%>
        <div  class="col-md-8"><%= f.email_field :email, class: "form-control" %></div>
      </div>

      <div class="form-group row">
        <%= f.label :password, "Ton mot de passe", class: "col-md-4 control-label"%>
        <div  class="col-md-8"><%= f.password_field :password, class: "form-control" %></div>
      </div>

      <div class="form-group row">
        <%= label_tag :city_id, "Ta ville:", class: "col-md-4 control-label" %>
        <div  class="col-md-8"><%= select_tag :city_id, options_from_collection_for_select(City.all, :id, :name), class: "form-control"  %></div>
      </div>

      <div class="form-group row mt-3">
        <div class="col-md-8 col-md-offset-4">
          <button type="submit" class="btn btn-primary">S'inscrire</button>
        </div>
      </div>

    <% end %>
  </div>
</div>