<%= form_tag url_for(action: 'update'), method: "patch" do %>
  <div class="form-group">
    <label for="formGroupExampleInput">Titre :</label>
      <%= text_field_tag 'title', @gossip.title, class:"form-control", id:"formGroupExampleInput", style:"width:500px;" %>
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">Contenu :</label>
      <%= text_area_tag 'content', @gossip.content, class:"form-control", id:"formGroupExampleInput2", style:"width:500px; height:300px;"%>
  </div>
  <button type="submit" class="btn btn-primary" style="width:500px;">Editer</button>  
<% end %>